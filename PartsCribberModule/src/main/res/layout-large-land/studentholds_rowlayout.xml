<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/supportingColor">

    <TextView
        android:id="@+id/studentholds_username"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:typeface="serif"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingStart="25dp"
        android:paddingTop="10dp"
        android:textColor="@color/textColor"
        android:text="@string/text_item_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/studentholds_quantityheld" />

    <TextView
        android:id="@+id/studentholds_quantityheld"
        android:layout_width="70dp"
        android:layout_height="51dp"
        android:typeface="serif"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingStart="25dp"
        android:paddingTop="10dp"
        android:textColor="@color/textColor"
        android:text="0"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>