<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackgroundcolor"
    tools:context="ifeoluwa.partscribber.PCAddNewEquipment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/item_name_value"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="#E1F5FE"
            android:ems="10"
            android:hint="@string/item_name_value"
            android:inputType="textPersonName"
            android:padding="9dp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/serial_no_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/item_name_value"
            android:layout_alignStart="@+id/item_name_value"
            android:layout_below="@+id/item_name_value"
            android:layout_marginTop="5dp"
            android:background="#E1F5FE"
            android:ems="10"
            android:hint="@string/serial_no_value"
            android:inputType="number"
            android:maxLength="6"
            android:padding="9dp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/quantity_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/serial_no_value"
            android:layout_alignStart="@+id/serial_no_value"
            android:layout_below="@+id/serial_no_value"
            android:layout_marginTop="5dp"
            android:background="#E1F5FE"
            android:ems="10"
            android:hint="@string/quantity_value"
            android:inputType="number"
            android:padding="9dp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/available_qty_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E1F5FE"
            android:ems="10"
            android:hint="@string/available_qty_value"
            android:inputType="number"
            android:padding="9dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/quantity_value"
            android:layout_alignStart="@+id/category_value"
            android:layout_alignEnd="@+id/quantity_value" />

        <AutoCompleteTextView
            android:id="@+id/category_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E1F5FE"
            android:hint="@string/category_value"
            android:inputType="textPersonName"
            android:padding="9dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/available_qty_value"
            android:layout_alignStart="@+id/quantity_value"
            android:layout_alignEnd="@+id/quantity_value" />

        <Button
            android:id="@+id/add_item_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/category_value"
            android:layout_alignStart="@+id/category_value"
            android:layout_below="@+id/category_value"
            android:layout_marginTop="10dp"
            android:background="#80D8FF"
            android:onClick="addItem"
            android:text="@string/add_item_button"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>


</FrameLayout>
