<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackgroundcolor"
    tools:context="ifeoluwa.partscribber.PartsCribberLogin">

    <TextView
        android:id="@+id/login_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_header"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="@color/supportingColor"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="86dp"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/login_username"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/login_username"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="10"
        android:text="ifedavid"
        android:textStyle="bold"
        android:textColor="@color/supportingColor"
        android:padding="9dp"
        android:background="@color/textColor"
        android:inputType="textPersonName"
        android:hint="@string/login_username"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="143dp"
        android:layout_above="@+id/login_password"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="@string/login_password"
        android:text="password"
        android:textStyle="bold"
        android:padding="9dp"
        android:textColor="@color/supportingColor"
        android:inputType="textPassword"
        android:background="@color/textColor"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="186dp"
        android:layout_marginBottom="23dp"
        android:layout_above="@+id/login_button"
        android:layout_alignStart="@+id/login_username" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="213dp"
        android:layout_height="50dp"
        android:text="@string/login_button"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/textColor"
        android:background="@color/supportingColor"
        android:onClick="afterLogin"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="250dp"
        android:layout_marginBottom="199dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/login_password" />

</RelativeLayout>
