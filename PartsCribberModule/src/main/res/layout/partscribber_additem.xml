<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackgroundcolor"
    tools:context="ifeoluwa.partscribber.PartsCribberAddItem">


    <EditText
        android:id="@+id/item_name_value"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/item_name_value"
        android:textStyle="bold"
        android:textColor="#000000"
        android:padding="9dp"
        android:background="#E1F5FE"
        android:inputType="textPersonName"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/serial_no_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLength="6"
        android:textStyle="bold"
        android:textColor="#000000"
        android:padding="9dp"
        android:background="#E1F5FE"
        android:inputType="number"
        android:layout_marginTop="5dp"
        android:hint="@string/serial_no_value"
        android:layout_below="@+id/item_name_value"
        android:layout_alignStart="@+id/item_name_value"
        android:layout_alignEnd="@+id/item_name_value" />

    <EditText
        android:id="@+id/quantity_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/quantity_value"
        android:textStyle="bold"
        android:textColor="#000000"
        android:padding="9dp"
        android:background="#E1F5FE"
        android:inputType="number"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/serial_no_value"
        android:layout_alignStart="@+id/serial_no_value"
        android:layout_alignEnd="@+id/serial_no_value" />

    <AutoCompleteTextView
        android:id="@+id/category_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/category_value"
        android:textStyle="bold"
        android:textColor="#000000"
        android:inputType="textPersonName"
        android:padding="9dp"
        android:layout_marginTop="5dp"
        android:background="#E1F5FE"
        android:layout_below="@+id/quantity_value"
        android:layout_alignStart="@+id/quantity_value"
        android:layout_alignEnd="@+id/quantity_value" />

    <Button
        android:id="@+id/add_item_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="#80D8FF"
        android:text="@string/add_item_button"
        android:onClick="addItem"
        android:layout_below="@+id/category_value"
        android:layout_marginTop="10dp"
        android:layout_alignEnd="@+id/category_value"
        android:layout_alignStart="@+id/category_value" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="#E1F5FE"
        android:textSize="25sp"
        android:layout_marginTop="66dp"
        android:text="@string/update_inventory_header" />
</RelativeLayout>
