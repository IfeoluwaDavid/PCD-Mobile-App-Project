<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackgroundcolor"
    tools:context="ifeoluwa.partscribber.PartsCribberRegisterUser">

    <TextView
        android:id="@+id/all_available_tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="#E1F5FE"
        android:textSize="25sp"
        android:layout_marginTop="12dp"
        android:text="@string/all_available_tools"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#0277BD"
        android:dividerHeight="3dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/txtsearch"
        android:layout_centerHorizontal="true" />

    <SearchView
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:queryHint="@string/search_equipment_hint"
        android:textStyle="bold"
        android:textColor="#000000"
        android:background="#E1F5FE"
        android:layout_below="@+id/all_available_tools"
        android:layout_alignStart="@+id/listview"
        android:layout_alignEnd="@+id/listview"
        android:id="@+id/txtsearch" />


</RelativeLayout>
