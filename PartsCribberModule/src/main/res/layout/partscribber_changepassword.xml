<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackgroundcolor"
    tools:context="ifeoluwa.partscribber.PartsCribberChangePassword">

    <Button
        android:id="@+id/save_password_button"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="@string/save_password_button"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="352dp"
        android:onClick="editProfileInfo"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="#80D8FF"
        android:layout_marginTop="5dp"
        android:layout_above="@+id/forgot_password_button"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/forgot_password_button"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password_button"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="352dp"
        android:onClick="forgotCurrentPassword"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="#80D8FF"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="117dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/save_password_button" />

    <TextView
        android:id="@+id/change_password_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_password_header"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="#E1F5FE"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="86dp"
        android:layout_above="@+id/current_password"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/current_password"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="10"
        android:focusable="false"
        android:clickable="false"
        android:text="@string/current_password"
        android:textStyle="bold"
        android:textColor="#000000"
        android:padding="9dp"
        android:background="#E1F5FE"
        android:hint="@string/login_username"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="143dp"
        android:layout_above="@+id/confirm_current_password"
        android:layout_alignStart="@+id/confirm_current_password"
        android:layout_alignEnd="@+id/confirm_current_password" />

    <EditText
        android:id="@+id/confirm_current_password"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="10"
        android:focusable="false"
        android:clickable="false"
        android:text="@string/confirm_current_password"
        android:textStyle="bold"
        android:textColor="#000000"
        android:padding="9dp"
        android:background="#E1F5FE"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="186dp"
        android:layout_marginTop="5dp"
        android:layout_above="@+id/new_password"
        android:layout_alignStart="@+id/new_password"
        android:layout_alignEnd="@+id/new_password" />

    <EditText
        android:id="@+id/new_password"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="10"
        android:focusable="false"
        android:clickable="false"
        android:text="@string/new_password"
        android:textStyle="bold"
        android:textColor="#000000"
        android:padding="9dp"
        android:background="#E1F5FE"
        android:layout_marginTop="5dp"
        android:layout_above="@+id/confirm_new_password"
        android:layout_alignStart="@+id/confirm_new_password"
        android:layout_alignEnd="@+id/confirm_new_password" />

    <EditText
        android:id="@+id/confirm_new_password"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="10"
        android:focusable="false"
        android:clickable="false"
        android:text="@string/confirm_new_password"
        android:textStyle="bold"
        android:textColor="#000000"
        android:padding="9dp"
        android:background="#E1F5FE"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="186dp"
        android:layout_above="@+id/save_password_button"
        android:layout_alignStart="@+id/save_password_button"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignEnd="@+id/save_password_button" />


</RelativeLayout>
