        android:theme="@style/customStyle">
        <activity android:name=".PartsCribberSplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PartsCribberLogin" />
        <activity android:name=".PartsCribberViewProfile" />
        <activity android:name=".PartsCribberAdminMenu" />
        <activity android:name=".PartsCribberStudentMenu" />
        <activity android:name=".PartsCribberChangePassword" />
        <activity android:name=".PartsCribberViewEquipment" />
        <activity android:name=".PartsCribberSelectTool" />
        <activity android:name=".PartsCribberViewToolData" />
        <activity android:name=".PartsCribberRegisterUser" />
        <activity android:name=".PartsCribberUpdateItem" />
        <activity android:name=".PartsCribberRentEquipment" />
        <activity android:name=".PartsCribberStudentCart" />
